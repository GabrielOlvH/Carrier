{
  "schemaVersion": 1,
  "id": "carrier",
  "version": "${version}",

  "name": "Carrier",
  "description": "Carrier enables you to easily transport chests, animals and mob spawners!",
  "authors": [
    "GabrielOlvH"
  ],
  "contact": {
    "sources": "https://github.com/GabrielOlvH/Carrier"
  },

  "license": "Apache-2.0",
  "icon": "assets/carrier/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "me.steven.carrier.Carrier"
      }
    ]
  },
  "mixins": [
    "carrier.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
